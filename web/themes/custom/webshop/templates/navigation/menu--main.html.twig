{% set items = simplify_menu('main') %}

{# Iterate menu tree #}
<ul class="right hide-on-med-and-down">
  {% for menu_item in items.menu_tree %}
    <li class="">
      <a href="{{ menu_item.url }}">{{ menu_item.text }}</a>
    </li>
  {% endfor %}
</ul>

